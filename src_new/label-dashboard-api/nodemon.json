{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "dist",
    "node_modules",
    "uploads/**/*"
  ],
  "exec": "ts-node --transpile-only src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "colours": true,
  "legacyWatch": false,
  "delay": 1000
}